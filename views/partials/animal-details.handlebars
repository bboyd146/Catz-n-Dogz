<div class="card text-center text-white bg-dark mb-3">
    <a href="/animal/{{id}}">
        <header>{{animal.animal_name}}</header>
    </a>
    <h2>{{pet_name}}</h2>
    <img class="card-img-top" src="/images/{{filename}}" id="img-preview" width="300" height="250" />
    <div class="card-body">
        <p class="card-text">Breed: {{breed}}</p>
        <ul>
            <li>Sex: {{sex}}</li>
            <li>No collar found?: {{is_stray}}</li>
        </ul>
        <footer class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">Days ago</small>
            </div>
        </footer>
    </div>
</div>